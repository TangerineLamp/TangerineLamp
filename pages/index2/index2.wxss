/* pages/index2/index2.wxss */

/* 子元素居中通用样式设置 */
.in_mid{
  display: flex;
  justify-content: center;
  align-items: center;
}
/* 子元素水平居中垂直顶格通用样式 */
.in_top{
  display: flex;
  justify-content: center;
  align-items: flex-start;
}
/* 通用占位样式 */
.blank {
  width: 100%;
  height: 20rpx;
}
/***********************************标题部分***********************************/
/* 顶部装载标题的空白容器 */
.topcontainer{
  display: flex;
  width: 100%;
  height: 200rpx;
  background-color: #fff;
}
/*标题*/
.case_title{
  color: #ff9933;
  font-size: 60rpx;
  font-weight: bold;
  height: 100%;
}
/***********************************选择图标部分***********************************/
/* 装载树洞首页的空白容器 */
.bottomcontainer{
  width: 100%;
  height: calc( 100vh - 200rpx );
  display: flex;
}
/* 图标容器 */
.imgcontainer{
  width: 80%;
  height: 60%;
}
/*首页通用标准图片大小样式*/
.stdimg{
  width: 100rpx;
  height: 100rpx;
}
/* 图片容器中的一级子容器 */
.imghalf{
  width: 100%;
  height: 50%;
  justify-content: space-around;
}
/* 图片容器只能中的二级子容器 */
.singleimg{
  flex-direction: column;
  display: flex;
  align-items: center;
  justify-content: space-around;
  background-color: #fff;
}
/* 设置图标下面的内容 */
.case_info {
  color: #8B8A8A;
}
/***********************************编辑入口***********************************/
/* 按钮的容器 */
.editbuttoncontainer .in_mid{
  display: flex;
  width: 100%;
  height: 40rpx;
}
/* 圆形按钮的样式 */
.circle{
  background-color: #ff9933;
  border: 0 solid #ffffff;
  box-shadow: 6rpx 1rpx 1rpx #cccccc;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: 1%;
  color: #fff;
  font-size: 60rpx;
  border-radius: 50%;
}